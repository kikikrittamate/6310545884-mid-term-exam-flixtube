<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>FlixTube: Upload video</title>

        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <script src="js/upload.js"></script>

        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">
                        FlixTube
                    </div>
                    <div class="ml-16">
                        <a href="/">Videos</a>
                    </div>
                    <div class="ml-4 border-b-2 border-blue-600">
                        <a href="/upload">Upload</a>
                    </div>
                    <div class="ml-4">
                        <a href="/history">History</a>
                    </div>
                </div>
            </div>

        <div class="m-4">
            <h1>Upload videos</h1>
            <div class="m-4">
                <form class="upload-form">
                    <p>Click the button and choose videos to upload.</p>
                    <input 
                        class="mt-2"
                        type="file" 
                        id="uploadInput" 
                        accept="video/*" 
                        onchange="uploadFiles(this.files)"
                        />
                </form>

                <div id="results" class="mt-4">
                    <div>Uploaded:</div>
                </div>
            </div>
        </div>
        <div id="ads-list" class="ads">
          <script>
            var sites = [{name:"AIS", link:"https://www.ais.th/"},{name:"TRUE",
            link:"https://www.true.th/"} ,{name:"LINE",
            link:"https://line.me/en/"} , {name:"Twitter",
            link:"https://twitter.com/home?lang=en"},{name:"Steam",
            link:"https://store.steampowered.com/"} ]; function randomSite() {
            var i = parseInt(Math.random() * sites.length); var link = sites[i];
            location.href = link.link;
            document.getElementById('ad-link').textContent = link.name; }
          </script>

          <a id="ad-link" onclick="randomSite();">Link</a>
        </div>
    </body>
</html>